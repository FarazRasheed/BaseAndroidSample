<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.yap.yappk.ui.onboarding.otpverification.OTPVerificationVM" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingTop="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_medium">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/verifyTitleTV"
                style="@style/Yap.App.Widget.TextView.PrimaryDark"
                android:gravity="center"
                android:text="Verify your mobile number"
                android:textSize="@dimen/text_size_h3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/verifySubTitleTV"
                style="@style/Yap.App.Widget.TextView.SecondaryColor.Medium"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:text="We've sent a verification code to"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verifyTitleTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phoneTV"
                style="@style/Yap.App.Widget.TextView.Secondary"
                android:gravity="center"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_size_h6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verifySubTitleTV" />

            <com.yap.uikit.widget.otptextview.OtpTextView
                android:id="@+id/otpView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_btn_side_paddings_xl"
                android:textColor="?attr/colorPrimary"
                app:bar_enabled="false"
                app:bar_height="@dimen/_2sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneTV"
                app:layout_constraintVertical_bias="0.137"
                app:length="6"
                app:otp_box_background="@drawable/otp_bg"
                app:otp_box_background_active="@drawable/otp_bg_active"
                app:otp_box_background_error="@drawable/otp_bg_error"
                app:otp_box_background_success="@drawable/otp_bg_success"
                app:otp_text_size="@dimen/_24sdp"
                app:requestKeyboard="@{true}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTimer"
                style="@style/Yap.App.Widget.TextView.SecondaryColor.XSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/otpView"
                tools:text="04:22" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnResend"
                style="@style/Yap.App.Widget.TextView.PrimaryColor.Large"
                android:background="@null"
                android:gravity="center"
                android:lineSpacingExtra="1sp"
                android:onClick="@{viewModel::onClick}"
                android:text="Resend code"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTimer"
                tools:text="Resend code" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium_large"
                android:onClick="@{viewModel::onClick}"
                android:text="Verify"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnResend"
                app:layout_constraintVertical_bias="0.98" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>